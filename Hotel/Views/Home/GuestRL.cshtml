@model Hotel.Models.Login

@{
    ViewBag.Title = "GuestLogin";
}
@{
    ViewBag.Title = "GuestRL";
}
@{
    ViewBag.Title = "RegisterGuest";
}

<button id="RegisterFormButton" class="text-decoration-none text-dark">REGISTER</button>

<button id="LoginFormButton" class="text-decoration-none text-dark">LOGIN</button>

<div id="RegisterForm" style="display:none">



    <h2>RegisterGuest</h2>

</div>

<div id="LoginForm" style="display:none">



    <h2>GUEST LOG IN</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="d-flex flex-column bg-primary bg-opacity-75 justify-content-center align-content-center w-50 mx-auto rounded mt-5">

            <div class="d-flex flex-column justify-content-center align-items-center">
                <h2>Log In:</h2>

                <div class="form-group">
                    <div class="d-flex flex-column align-items-center">
                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>



            <div class="d-flex flex-column justify-content-center align-items-center">

                <div class="form-group">
                    <div class="d-flex flex-column align-items-center">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-column justify-content-center align-items-center">
                <div class="form-group">
                    <div class="mt-4 mb-4">
                        <input type="submit" value="Log In" class="btn btn-primary border border-light" />
                    </div>
                </div>
            </div>
        </div>

    }





</div>






@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#LoginFormButton").click(function () {
                $("#LoginForm").slideToggle();
            });

            $("#RegisterFormButton").click(function () {
                $("#RegisterForm").slideToggle();
            });
        });
    </script>
}